.photo-container{
  display: flex;
  height: 375rpx;
  background-color: #FFFFFF;

  position: relative;
}

.photo {
  width: 100%;
  height: 100%;
}

.placeholder{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: #F2F3F4;

  opacity: 1;
  transition: all 1s;
}

.disapear{
  opacity: 0;
}

.desc{
  position: absolute;
  left: 0;
  top: 12rpx;
  background-color: #FFFFFF;

  height: 50rpx;
  border-top-right-radius: 25rpx;
  border-bottom-right-radius: 25rpx;

  opacity: 0.8;
  transition: all 1s;
}

.desc-txt{
  font-size: 22rpx;
  padding-left: 6rpx;
  padding-right: 10rpx;
}
