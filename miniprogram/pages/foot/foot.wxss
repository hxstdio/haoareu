.foot-container{
  display: flex;
  width: 100%;
  height: 100%;
  background-color: #FFFFFF;
  position: relative;
}

.map{
  width: 100%;
  height: 100%;
}

.content-container{
  position: absolute;
  top: -100%;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;

  width: 100%;
  height: 100%;
  overflow: hidden;
}

.detail{
  width: 100%;
  height: 80%;
  max-height: 80%;
  display: flex;
  background-color: #FFFFFF;
  overflow: hidden;
}

.tool{
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  width: 100%;
  background-color: rgba(255, 255, 255, 0);
  position: relative;
}

.close-icon{
  position: absolute;
  top: -142rpx;
  left: 36rpx;
  width: 279rpx;
  height: 342rpx;
}

.error-container{
  width: 100%;
  position: absolute;
  top: 300rpx;
}