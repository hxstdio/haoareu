.user-container{
  display: flex;
  flex-direction: row;
  padding: 24rpx;
  background-color: #FFFFFF;
}

.photo-info{
  width: 280rpx;
  height: 280rpx;
  border-radius: 12rpx;
}

.photo{
  width: 100%;
  height: 100%;
}

.user-info{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;

  font-size: 26rpx;
  padding-left: 24rpx;
}

.icon{
  width: 26rpx;
  height: 26rpx;
  margin-right: 6rpx;
}

.name{
  font-size: 42rpx;
  font-weight: bold;
}

.slogan{
  color: #333;
  font-style: italic;
  margin-top: 6rpx;
}

.gender, .location{
  margin-top: 6rpx;
}