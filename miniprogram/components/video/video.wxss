.video-container{
  width: 100%;
  display: flex;
  height: 375rpx;
  background-color: #FFFFFF;

  position: relative;
}

.video {
  width: 100%;
  height: 100%;
}

.placeholder{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: #FFFFFF;

  opacity: 1;
  transition: all 1s;
}

.disapear{
  opacity: 0;
}