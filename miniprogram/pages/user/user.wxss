.user-container{
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: #F2F3F4;
  position: relative;
}

.media-placeholder{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;

  height: 375rpx;
  background-color: #FFFFFF;
  margin-bottom: 24rpx;
}

.textarea-wrap{
  flex: 1;
  background-color: #FFFFFF;
  padding: 26rpx;
  margin-bottom: 24rpx;
}

.textarea{
  width: 100%;
  height: 100%;

  font-size: 26rpx;
}

.extra-wrap{
  height: 125rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  background-color: #FFFFFF;
  
  position: relative;
}

.location-wrap{
  width: 50%;
  height: 100%;
  display: flex;
  box-sizing: border-box;
  padding-bottom: 24rpx; 
  padding-right: 24rpx; 
  flex-direction: column;
  align-items: flex-end;
  justify-content: flex-end;
  background-color: rgba(255,255,255,0);
  position: absolute;
  top: 0;
  right: -50%;
}

.weather-icon{
  width: 64rpx;
  height: 64rpx;
}

.city-txt{
  margin-top: 12rpx;
  font-size: 22rpx;
}

.checkbox-group-wrap{
  display: flex;
  height: 100%;
  flex-direction: column;
  justify-content: space-around;
}

.label-checkbox{
  font-size: 26rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.btn-wrap{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #FFFFFF;
  height: 120rpx;
}

.submit-btn{
  width: 100%;
}

.add-photo{
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 24rpx;
}
