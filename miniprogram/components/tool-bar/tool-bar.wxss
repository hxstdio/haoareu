.tool-bar-container{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;

  display: flex;
  height: 100rpx;
  background-color: #FFFFFF;
  border-top: 1rpx solid #F2F3F4;

  transition: all 0.5s;
}

.hide {
  transform: translateY(120rpx);
}

.item{
  display: flex;
  flex: 1;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.icon{
  width: 58rpx;
  height: 58rpx;
}

.label{
  margin-top: 6rpx;
  font-size: 24rpx;
}