.message-container{
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: #F2F3F4;
  position: relative;
}

.textarea-wrap{
  flex: 1;
  background-color: #FFFFFF;
  padding: 26rpx;
  margin-bottom: 24rpx;
}

.textarea{
  width: 100%;
  height: 100%;

  font-size: 26rpx;
}

.btn-wrap{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #FFFFFF;
  height: 120rpx;
}

.submit-btn{
  width: 100%;
}